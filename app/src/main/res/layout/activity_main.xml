<?xml version="1.0" encoding="utf-8"?>

<layout>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        style="@style/CardView_rounded_style"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/pencil_imgview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_state"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/pencil"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/arrow_imgview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/button_state"

                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/arrow"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/square_imgview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background = "@drawable/button_state"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/square_96"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/circle_imgview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background = "@drawable/button_state"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/circle"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageButton
                android:id="@+id/palette_imgview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_state"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/palette_96"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.android.drawingapp.utils.ViewDraw
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>
</layout>